<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_marginTop="@dimen/dp_25"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_11"
            android:background="@drawable/home_search_tv_bg"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="搜索最新最热的商品" />
    </RelativeLayout>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relativeLayout"
    android:id="@+id/sl_home">
    <com.scwang.smartrefresh.header.MaterialHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv_home"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.xuyijie.ebuyshop.weight.banner.AutoScrollViewPager
                android:id="@+id/banner_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                app:point_layout="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_8"
                    android:drawableTop="@mipmap/home_camera"
                    android:gravity="center"
                    android:text="数码"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_8"
                    android:drawableTop="@mipmap/home_bag"
                    android:gravity="center"
                    android:text="箱包"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_8"
                    android:drawableTop="@mipmap/home_beauty"
                    android:gravity="center"
                    android:text="化妆品"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_8"
                    android:drawableTop="@mipmap/home_clothes"
                    android:gravity="center"
                    android:text="服饰"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_8"
                    android:drawableTop="@mipmap/home_accessories"
                    android:gravity="center"
                    android:text="配饰"
                    android:textColor="#000" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="#fafafa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_active"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingBottom="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_28"
                        android:text="新品活动"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_active"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       />
                </LinearLayout>
<View
    android:layout_width="@dimen/dp_1.5"
    android:layout_height="match_parent"
    android:background="#fafafa"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_goods_select"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/dp_19"      android:textStyle="bold"
                            android:text="每日精选"
                            android:textColor="#000"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/iv_goods_select"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1.5"
                        android:background="#fafafa"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_brand_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="#333333"
                                android:paddingBottom="@dimen/dp_5"
                                android:paddingLeft="@dimen/dp_12"
                                android:paddingRight="@dimen/dp_12"
                                android:paddingTop="@dimen/dp_5"
                                android:text="手工达人"
                                android:textColor="#fff" />

                            <ImageView
                                android:id="@+id/iv_brand_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_10" />
                        </LinearLayout>
                        <View
                            android:layout_width="@dimen/dp_1.5"
                            android:layout_height="match_parent"
                            android:background="#fafafa"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_brand_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="#333333"
                                android:paddingBottom="@dimen/dp_5"
                                android:paddingLeft="@dimen/dp_12"
                                android:paddingRight="@dimen/dp_12"
                                android:paddingTop="@dimen/dp_5"
                                android:text="精选男表"
                                android:textColor="#fff" />

                            <ImageView
                                android:id="@+id/iv_brand_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_10" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="#fafafa" />

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magic_indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />

            <com.example.xuyijie.ebuyshop.weight.MyViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>




</RelativeLayout>